{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["react/canary", "react-dom/canary", "w3c-web-serial", "node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
        "@/*": ["src/*"],
        "@stores/*": ["src/stores/*"],
        "@modules/*": ["src/modules/*"],
        "@proto/*": ["src/proto/gen/*"],
        "@utils/*": ["src/utils/*"],
        "@configs/*": ["src/configs/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}
